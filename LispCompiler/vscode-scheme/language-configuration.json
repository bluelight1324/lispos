{
  "comments": {
    "lineComment": ";",
    "blockComment": ["#|", "|#"]
  },
  "brackets": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"]
  ],
  "autoClosingPairs": [
    { "open": "(", "close": ")" },
    { "open": "[", "close": "]" },
    { "open": "{", "close": "}" },
    { "open": "\"", "close": "\"", "notIn": ["string"] },
    { "open": "#|", "close": "|#" }
  ],
  "surroundingPairs": [
    ["(", ")"],
    ["[", "]"],
    ["{", "}"],
    ["\"", "\""]
  ],
  "indentationRules": {
    "increaseIndentPattern": "^.*\\((?!.*\\)).*$",
    "decreaseIndentPattern": "^\\s*\\).*$"
  },
  "wordPattern": "[\\w\\-\\!\\?\\*\\+\\<\\>\\=\\&\\%\\/\\:]+",
  "onEnterRules": [
    {
      "beforeText": "^.*\\(.*$",
      "afterText": "^\\).*$",
      "action": {
        "indent": "indentOutdent",
        "appendText": ""
      }
    }
  ]
}
